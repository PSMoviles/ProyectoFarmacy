<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConfigurationActivity" >

    <ScrollView
        android:id="@+id/SVUsarAdd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="436dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtCurrentUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario en uso:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/ddlUser"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Agregar usuario" />

            <TextView
                android:id="@+id/lblLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lenguaje:" />

            <Spinner
                android:id="@+id/ddlLanguage"
                android:layout_width="match_parent"
                android:layout_height="36dp" />

            <TextView
                android:id="@+id/lblTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tema:" />

            <Spinner
                android:id="@+id/ddlTheme"
                android:layout_width="match_parent"
                android:layout_height="36dp" />

            <TextView
                android:id="@+id/item_lblHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Spinner
                android:id="@+id/ddlExcipiente"
                android:layout_width="match_parent"
                android:layout_height="33dp" />

            <CheckBox
                android:id="@+id/chkEnableNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permitir notificaciones" />

            <CheckBox
                android:id="@+id/chkEnableGPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permitir acceso a GPS" />

            <CheckBox
                android:id="@+id/chkEnableInternetConection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permitir conexiÃ³n a internet" />

            <Button
                android:id="@+id/btnUpdateConfigurations"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Guadar cambios" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
